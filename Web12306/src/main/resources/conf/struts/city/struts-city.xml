<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC    
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"    
    "http://struts.apache.org/dtds/struts-2.3.dtd">
    
<struts>
	<package name="cityInfoJson" extends="json-default" namespace="/city" >
	
		<!-- 参数查询城市信息 -->
		<action name="queryCitiesByParam" class="cityInfoAction" method="queryCitiesByParam">
			<result type="json" />
		</action>
		
		<!-- 根据参数查询城市，包含其所属省份信息 -->
		<action name="queryCitiesWithProvinceByParam" class="cityInfoAction" method="queryCitiesWithProvinceByParam">
			<result type="json" />
		</action>
		
	</package>
	
</struts>    